@page
@model Divarcheh.Endpoints.RazorPages.Pages.Advertisement.CreateModel
@{
}

<!-- main -->
<section id="main" class="clearfix ad-details-page">
	<div class="container">

		<div class="breadcrumb-section">
			<!-- breadcrumb -->
			<ol class="breadcrumb">
				<li><a href="index.html">خانه</a></li>
				<li>افزودن آگهی</li>
			</ol><!-- breadcrumb -->
			<h2 class="title">@Model.FormItems.CategoryData.Title</h2>
		</div><!-- banner -->

		<div class="adpost-details">
			<div class="row">
				<div class="col-lg-8">
                    <form method="post" enctype="multipart/form-data" role="form">
                        
                        <input type="hidden" asp-for="@Model.ChildCategoryId" value="1" id="newsell"> 

                        <fieldset>
                            <div class="section postdetails">
                                <h4>محصول و خدمت خود را بفروشید <span class="pull-right">* فیلدهای اجباری</span></h4>
                                <div class="form-group selected-product">
                                    <ul class="select-category list-inline">
                                        <li>
                                            <a href="ad-post.html">
                                                <span class="select">
                                                    <img src="@Model.FormItems.CategoryData.ImagePath" alt="Images" class="img-fluid">
                                                </span>
                                                @Model.FormItems.CategoryData.Title
                                            </a>
                                        </li>
                                    </ul>
                                    <a class="edit" href="#"><i class="fa fa-pencil"></i>ویرایش</a>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-3">نوع آگهی<span class="required">*</span></label>

                                    <div class="col-sm-9 user-type">
                                        <input type="radio" asp-for="@Model.InputModel.TypeEnum" value="1" id="newsell">
                                        <label for="newsell">می‌خواهم بخرم </label>
                                        <input type="radio" asp-for="@Model.InputModel.TypeEnum" value="2" id="newbuy">
                                        <label for="newbuy">می‌خواهم بفروشم</label>
                                    </div>

                                </div>
                                <div class="row form-group add-title">
                                    <label class="col-sm-3 label-title">عنوان آگهی شما<span class="required">*</span></label>
                                    <div class="col-sm-9">
                                        <input type="text" asp-for="InputModel.Title" class="form-control" id="text">
                                    </div>
                                </div>
                                <div class="row form-group add-image">
                                    <label class="col-sm-3 label-title">عکس‌های آگهی شما <span>(این تصویر به عنوان کاور قرار میگیرد )</span> </label>
                                    <div class="col-sm-9">
                                        <h5><i class="fa fa-upload" aria-hidden="true"></i>فایل‌ها را برای آپلود انتخاب کنید/ فایل‌ها را بکشید و بیندازید <span>می‌توانید چندین عکس بفرسید.</span></h5>
                                        <div class="upload-section">
                                            <label class="upload-image">
                                                <input asp-for="InputModel.Images" type="file" id="upload-image-one" multiple>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group select-condition">
                                    <label class="col-sm-3">وضعیت<span class="required">*</span></label>

                                    <div class="col-sm-9 user-type">
                                        <input type="radio" value="1" asp-for="InputModel.StatusEnum" id="new">
                                        <label for="new">جدید</label>
                                        <input type="radio" value="2" asp-for="InputModel.StatusEnum" id="used">
                                        <label for="used">دسته دوم</label>
                                    </div>

                                </div>
                                <div class="row form-group select-price">
                                    <label class="col-sm-3 label-title">قیمت<span class="required">*</span></label>
                                    <div class="col-sm-9">
                                        <label>واحد</label>
                                        <input asp-for="InputModel.Price" type="text" class="form-control">
                                    </div>
                                </div>


                                <div class="row form-group brand-name">
                                    <label class="col-sm-3 label-title">نام برند<span class="required">*</span></label>
                                    <select asp-for="InputModel.BrandId" class="form-select">
                                        @foreach (var brand in @Model.FormItems.Brands)
                                        {
                                            <option value="@brand.Id">@brand.Title</option>
                                        }
                                    </select>
                                </div>

                                <div class="row form-group model-name">
                                    <label class="col-sm-3 label-title">مدل</label>
                                    <div class="col-sm-9">
                                        <input type="text" asp-for="InputModel.AdvModel" class="form-control" id="model" placeholder="گوشی سامسونگ همراه شارژر بیسیم">
                                    </div>
                                </div>

                                <div class="row form-group item-description">
                                    <label class="col-sm-3 label-title">توضیحات<span class="required">*</span></label>
                                    <div class="col-sm-9">
                                        <textarea asp-for="InputModel.Description" class="form-control" placeholder="در مورد محصول خودتان توضیح دهید" rows="8"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-9 offset-sm-3">
                                        <p>5000 واژه مانده است.</p>
                                    </div>
                                </div>
                            </div><!-- section -->

                            <div class="checkbox section agreement">
                                <label for="send">
                                    <input type="checkbox" name="send" id="send">
                                    با کلیک کردن روی دکمه زیر برای ارسال آگهی شما شرایط <a href="#">مقررات استفاده</a> و <a href="#">حفظ حریم شخصی</a> را پذیرفته‌اید
                                </label>
                                <button type="submit" class="btn btn-primary">افزودن آگهی شما</button>
                            </div><!-- section -->

                        </fieldset>
                    </form><!-- form -->
				</div>


				<!-- quick-rules -->
				<div class="col-lg-4">
					<div class="section quick-rules">
						<h4>قوانین</h4>
						<p class="lead">ارسال آگهی همیشه در  <a href="#">کالا</a> رایگان است هرچند تمامی آگهی‌ها باید از قوانین سایت پیروی کنند!</p>

						<ul>
							<li>حتماً در دسته صحیح پست کنید.</li>
							<li>بیش از یک بار آگهی مشابه را ارسال نکنید و یا ظرف 48 ساعت یک آگهی را دوباره ارسال کنید.</li>
							<li>تصاویر را با علامت بارگذاری نکنید.</li>
							<li>تبلیغات حاوی چندین مورد را ارسال نکنید ، مگر اینکه این یک بسته بندی باشد.</li>
							<li>ایمیل یا شماره تلفن خود را در عنوان یا توضیحات قرار ندهید.</li>
							<li>حتماً در دسته صحیح پست کنید.</li>
							<li>بیش از یک بار آگهی مشابه را ارسال نکنید و یا ظرف 48 ساعت یک آگهی را دوباره ارسال کنید.</li>
							<li>تصاویر را با علامت بارگذاری نکنید.</li>
							<li>تبلیغات حاوی چندین مورد را ارسال نکنید ، مگر اینکه این یک بسته بندی باشد.</li>
						</ul>
					</div>
				</div><!-- quick-rules -->
			</div><!-- photos-ad -->
		</div>
	</div><!-- container -->
</section><!-- main -->