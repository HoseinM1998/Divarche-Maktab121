@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Divarcheh.Endpoints.RazorPages.Areas.Account.Pages.LoginModel
@{
}

<div class="container px-5 my-5">
    <form method="post">
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="PageModel.Username" placeholder="Username" />
            <label for="username">Username</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="PageModel.Password" type="text" placeholder="Password"  />
            <label for="password">Password</label>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg " id="submitButton" type="submit">Submit</button>
        </div>
    </form>
</div>
